<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <LinearLayout
                    android:padding="12pt"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="#ffffff"
                        android:textSize="10pt"
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saldo Saya :"/>

                    <TextView
                        android:id="@+id/saldo"
                        android:textColor="#ffffff"
                        android:textSize="12pt"
                        android:layout_below="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RP. 500.000"/>

                </LinearLayout>




            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="-100dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:elevation="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/car4"
                    android:background="#ffffff"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="11dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center">

                        <TextView
                            android:id="@id/home"
                            fontPath="fonts/Poppins-SemiBold.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:text="Selamat Datang"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            tools:ignore="MissingPrefix" />


                        <LinearLayout
                            android:id="@+id/garis"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/home"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/garis"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/test"
                                android:id="@+id/logo"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center" />

                            <TextView

                                android:id="@+id/txt_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="ADE SAPUTRA"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="MissingPrefix" />


                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/akun"
                        android:textColor="#ffffff" />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>
            <RelativeLayout

                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView

                    fontPath="fonts/Poppins-Bold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:id="@+id/txte"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_height="20dp"
                    android:text="Siap melayani anda setulus hati"/>

                <TextView
                    android:layout_below="@id/txte"
                    fontPath="fonts/Poppins-Regular.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Nikmati layanan kami"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/akun"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.33"
                    android:clickable="true">

                    <RelativeLayout
                        android:id="@+id/dataanda"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textView3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:scaleType="center"
                            android:src="@drawable/akun" />

                        <TextView
                            android:id="@+id/textView3"
                            fontPath="fonts/Poppins-SemiBold.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:maxLines="1"
                            android:text="Data Anda"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/absen"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.33"
                    android:clickable="true">

                    <RelativeLayout
                        android:id="@+id/absensidatang"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textView2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:scaleType="center"
                            android:src="@drawable/absen" />

                        <TextView
                            fontPath="fonts/Poppins-SemiBold.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Isi Saldo"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:id="@+id/textView2"
                            android:layout_marginBottom="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/tentang"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.33"
                    android:clickable="true">

                    <RelativeLayout
                        android:id="@+id/absensi"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textView6"
                            android:layout_centerHorizontal="true"
                            android:scaleType="center"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/about" />

                        <TextView

                            fontPath="fonts/Poppins-SemiBold.otf"
                            tools:ignore="MissingPrefix"
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"

                            android:layout_marginBottom="5dp"
                            android:maxLines="1"

                            android:text="Kirim"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.33"
                    android:clickable="true">

                    <RelativeLayout
                        android:id="@+id/upload"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_above="@+id/upload2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/absen2"
                            android:layout_marginBottom="5dp"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/upload2"
                            fontPath="fonts/Poppins-SemiBold.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Minta"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.33"
                    android:clickable="true">

                    <RelativeLayout
                        android:id="@+id/laporan_absensi"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_above="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/akun"
                            android:layout_marginBottom="5dp"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/status"
                            fontPath="fonts/Poppins-SemiBold.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Listrik"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.33"
                    android:clickable="true">

                    <RelativeLayout
                        android:id="@+id/btn_sign_out"
                        android:background="?attr/selectableItemBackground"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:scaleType="center"
                            android:layout_above="@+id/logout"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/about" />

                        <TextView
                            android:id="@+id/logout"
                            fontPath="fonts/Poppins-SemiBold.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"

                            android:layout_marginBottom="5dp"
                            android:maxLines="1"

                            android:text="Logout"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>